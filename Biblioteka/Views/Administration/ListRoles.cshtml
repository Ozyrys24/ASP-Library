@model IEnumerable<IdentityRole>

@{
	ViewData["Title"] = "List of Roles";
}

<div class="container-fluid">
	<div class="row col-md-10" >
		<a class="btn btn-primary ml-auto" asp-area="" asp-controller="Administration" asp-action="CreateRole">Create New Role</a>
	</div>
</div>
<div class="row justify-content-md-center col-md-10">
	@if (Model.Any())
	{
		foreach (var role in Model)
		{
			<div class="card m-2">
				<div class="card-header">
					Role Id: @role.Id
				</div>
				<div class="card-body text-center ">
					<h5 class="card-title">@role.Name</h5>
				</div>
				<div class="card-footer text-muted text-center">
					<a class="btn btn-primary" asp-area="" asp-route-id="@role.Id" asp-controller="Administration" asp-action="EditRole">Edit</a>
					<a class="btn btn-danger" asp-area="" asp-route-id="@role.Id" asp-controller="Administration" asp-action="DeleteRole">Delete</a>
				</div>
			</div>
		}
	}
	else
	{
		<div class="card text-center">
			<div class="card-header">

			</div>
			<div class="card-body">
				<h5 class="card-title">None at role created</h5>
			</div>
			<div class="card-footer text-muted">
			</div>
		</div>
	}
</div>
